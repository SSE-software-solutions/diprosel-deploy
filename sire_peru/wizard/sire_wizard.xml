<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista de Formulario del Wizard -->
        <record id="view_sire_wizard_form" model="ir.ui.view">
            <field name="name">sire.wizard.form</field>
            <field name="model">sire.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte SIRE">
                    <sheet>
                        <group>
                            <field name="periodo_id"/>
                        </group>
                        <footer>
                            <button name="generar_reporte" type="object" string="Generar Reporte" class="btn btn-primary"/>
                            <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AcciÃ³n del Wizard -->
        <record id="action_sire_wizard" model="ir.actions.act_window">
            <field name="name">Generar Reporte SIRE</field>
            <field name="res_model">sire.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
