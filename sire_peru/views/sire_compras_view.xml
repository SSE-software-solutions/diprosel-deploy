<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista Lista de Compras -->
    <record id="view_sire_compras_list" model="ir.ui.view">
        <field name="name">sire.compras.list</field>
        <field name="model">sire.compras</field>
        <field name="arch" type="xml">
            <list>
                <field name="fecha_emision"/>
                <field name="tipo_comprobante"/>
                <field name="tipo_documento_proveedor"/>
                <field name="numero_documento_proveedor"/>
                <field name="nombre_proveedor"/>
                <field name="base_imponible"/>
                <field name="igv"/>
                <field name="exonerado"/>
                <field name="inafecto"/>
                <field name="total"/>
                <field name="moneda"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario de Compra -->
    <record id="view_sire_compras_form" model="ir.ui.view">
        <field name="name">sire.compras.form</field>
        <field name="model">sire.compras</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="periodo_id"/>
                        <field name="fecha_emision"/>
                        <field name="tipo_comprobante"/>
                        <field name="tipo_documento_proveedor"/>
                        <field name="numero_documento_proveedor"/>
                        <field name="nombre_proveedor"/>
                        <field name="base_imponible"/>
                        <field name="igv"/>
                        <field name="exonerado"/>
                        <field name="inafecto"/>
                        <field name="total"/>
                        <field name="moneda"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción (Opcional, si quieres abrir registros de compras directamente) -->
    <record id="action_sire_compras" model="ir.actions.act_window">
        <field name="name">Registros de Compras</field>
        <field name="res_model">sire.compras</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                Aquí verás los registros de compras generados para los períodos del SIRE.
            </p>
        </field>
    </record>

</odoo>
