<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista de Formulario para Línea de Producto -->
    <record id="product_line_view_form" model="ir.ui.view">
        <field name="name">product.line.form</field>
        <field name="model">product.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="line_image" widget="image" class="oe_avatar"/>
                    <h1>
                        <field name="name" string="Nombre de la Línea de Producto"/>
                    </h1>
                    <group>
                        <field name="product_count" readonly="1" string="Número de Productos"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="product_ids" widget="many2many"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista para Línea de Producto -->
    <record id="product_line_view_list" model="ir.ui.view">
        <field name="name">product.line.list</field>
        <field name="model">product.line</field>
        <field name="arch" type="xml">
            <list string="Lista de Líneas de Producto">
                <field name="name"/>
                <field name="product_count"/>
            </list>
        </field>
    </record>

    <!-- Acción y Menú para Línea de Producto -->
    <record id="product_line_action" model="ir.actions.act_window">
        <field name="name">Líneas de Producto</field>
        <field name="res_model">product.line</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="product_line_menu" 
              name="Líneas de Producto" 
              parent="stock.menu_stock_inventory_control"
              action="product_line_action" 
              sequence="4"/>
</odoo>
