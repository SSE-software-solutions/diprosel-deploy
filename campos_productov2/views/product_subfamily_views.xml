<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista de Formulario para Sub Familia -->
    <record id="product_subfamily_view_form" model="ir.ui.view">
        <field name="name">product.subfamily.form</field>
        <field name="model">product.subfamily</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="subfamily_image" widget="image" class="oe_avatar"/>
                    <h1>
                        <field name="name" string="Nombre de la Sub Familia"/>
                    </h1>
                    <group>
                        <field name="brand_id" required="1" string="Marca"/>
                        <field name="product_count" readonly="1" string="Número de Productos"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="product_ids" widget="many2many"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista para Sub Familia -->
    <record id="product_subfamily_view_list" model="ir.ui.view">
        <field name="name">product.subfamily.list</field>
        <field name="model">product.subfamily</field>
        <field name="arch" type="xml">
            <list string="Lista de Sub Familias">
                <field name="name"/>
                <field name="brand_id"/>
                <field name="product_count"/>
            </list>
        </field>
    </record>

    <!-- Acción y Menú para Sub Familia -->
    <record id="product_subfamily_action" model="ir.actions.act_window">
        <field name="name">Sub Familias</field>
        <field name="res_model">product.subfamily</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="product_subfamily_menu" 
              name="Sub Familias" 
              parent="stock.menu_stock_inventory_control"
              action="product_subfamily_action" 
              sequence="7"/>
</odoo>
