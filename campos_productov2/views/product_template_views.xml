<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.product.custom.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Añadir campos después de la categoría -->
            <field name="categ_id" position="after">
                <field name="barcode_2" string="Código de Barra 2"/>
                <field name="sector_id" string="Giro de Negocios"/>
                <field name="line_id" string="Línea de Producto"/>
                <field name="model_id" string="Modelo"/>
                <field name="brand_id" string="Marca"/>
                 <field name="subfamily_id" string="Sub Familia"/>
            </field>
        </field>
    </record>
</odoo>
