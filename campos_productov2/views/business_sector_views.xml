<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista de Formulario para Giros de Negocios -->
    <record id="business_sector_view_form" model="ir.ui.view">
        <field name="name">business.sector.form</field>
        <field name="model">business.sector</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="sector_image" widget="image" class="oe_avatar"/>
                    <h1>
                        <field name="name" string="Nombre del Giro de Negocios"/>
                    </h1>
                    <group>
                        <field name="product_count" readonly="1" string="Número de Productos"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="product_ids" widget="many2many"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista para Giros de Negocios -->
    <record id="business_sector_view_list" model="ir.ui.view">
        <field name="name">business.sector.list</field>
        <field name="model">business.sector</field>
        <field name="arch" type="xml">
            <list string="Lista de Giros de Negocios">
                <field name="name" string="Giro de Negocios"/>
                <field name="product_count" string="Número de Productos"/>
            </list>
        </field>
    </record>

    <!-- Acción para Giros de Negocios -->
    <record id="business_sector_action" model="ir.actions.act_window">
        <field name="name">Giros de Negocios</field>
        <field name="res_model">business.sector</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú para Giros de Negocios -->
    <menuitem id="business_sector_menu" 
              name="Giros de Negocios" 
              parent="stock.menu_stock_inventory_control"
              action="business_sector_action" 
              sequence="3"/>
</odoo>
