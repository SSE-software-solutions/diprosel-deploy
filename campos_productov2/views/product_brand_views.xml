<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Vista de Formulario para Marca -->
    <record id="product_brand_view_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="brand_image" widget="image" class="oe_avatar"/>
                    <h1>
                        <field name="name" string="Nombre de la Marca"/>
                    </h1>
                    <group>
                        <field name="product_count" readonly="1" string="Número de Productos"/>
                    </group>
                    <notebook>
                        <page string="Productos">
                            <field name="product_ids" widget="many2many"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista para Marca -->
    <record id="product_brand_view_list" model="ir.ui.view">
        <field name="name">product.brand.list</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <list string="Lista de Marcas">
                <field name="name"/>
                <field name="product_count"/>
            </list>
        </field>
    </record>

    <!-- Acción y Menú para Marca -->
    <record id="product_brand_action" model="ir.actions.act_window">
        <field name="name">Marcas</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="product_brand_menu" 
              name="Marcas" 
              parent="stock.menu_stock_inventory_control"
              action="product_brand_action" 
              sequence="6"/>
</odoo>
