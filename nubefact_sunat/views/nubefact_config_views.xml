<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para configuración NubeFact -->
    <record id="view_nubefact_config_form" model="ir.ui.view">
        <field name="name">nubefact.config.form</field>
        <field name="model">nubefact.config</field>
        <field name="arch" type="xml">
            <form string="Configuración NubeFact">
                <header>
                    <button name="action_test_connection" 
                            string="Probar Conexión" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-plug"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_test_connection" 
                                icon="fa-check-circle">
                            <field name="connection_status" widget="badge" 
                                   decoration-success="connection_status == 'success'"
                                   decoration-danger="connection_status == 'failed'"
                                   decoration-info="connection_status == 'not_tested'"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archivado" bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="company_id" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Credenciales">
                            <field name="ruc" placeholder="20XXXXXXXXX"/>
                            <field name="token" password="True" placeholder="Token proporcionado por NubeFact"/>
                        </group>
                        
                        <group string="Configuración de API">
                            <field name="api_url" placeholder="https://api.nubefact.com/api/v1/tu-identificador"/>
                            <field name="environment" widget="radio"/>
                        </group>
                    </group>
                    
                    <group string="Estado de Conexión">
                        <field name="last_connection_test" readonly="1"/>
                        <field name="connection_message" readonly="1" 
                               invisible="connection_status == 'not_tested'"/>
                    </group>
                    
                    <group>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                    
                    <notebook>
                        <page string="Información">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <h4>Instrucciones de Configuración</h4>
                                    <ol>
                                        <li>Regístrese en <a href="https://www.nubefact.com" target="_blank">NubeFact.com</a></li>
                                        <li>Desde su panel de NubeFact, copie:
                                            <ul>
                                                <li><strong>Token de API</strong></li>
                                                <li><strong>URL de API</strong> (ejemplo: https://api.nubefact.com/api/v1/xxx-xxx-xxx)</li>
                                            </ul>
                                        </li>
                                        <li>Ingrese su RUC, Token y URL en este formulario</li>
                                        <li>Haga clic en "Probar Conexión" para verificar la configuración</li>
                                    </ol>
                                    <p><strong>Nota:</strong> La URL incluye su identificador único de NubeFact.</p>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para configuración NubeFact -->
    <record id="view_nubefact_config_tree" model="ir.ui.view">
        <field name="name">nubefact.config.tree</field>
        <field name="model">nubefact.config</field>
        <field name="arch" type="xml">
            <list string="Configuraciones NubeFact">
                <field name="company_id"/>
                <field name="ruc"/>
                <field name="api_url"/>
                <field name="connection_status" 
                       decoration-success="connection_status == 'success'"
                       decoration-danger="connection_status == 'failed'"
                       decoration-info="connection_status == 'not_tested'"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Acción para abrir configuración NubeFact -->
    <record id="action_nubefact_config" model="ir.actions.act_window">
        <field name="name">Configuración NubeFact</field>
        <field name="res_model">nubefact.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configura tu conexión con NubeFact
            </p>
            <p>
                Crea una configuración para comenzar a enviar comprobantes electrónicos a SUNAT.
            </p>
        </field>
    </record>

    <!-- Menú en Contabilidad -->
    <menuitem id="menu_nubefact_root"
              name="NubeFact"
              parent="account.menu_finance_configuration"
              sequence="100"/>
    
    <menuitem id="menu_nubefact_config"
              name="Configuración"
              parent="menu_nubefact_root"
              action="action_nubefact_config"
              sequence="10"/>

</odoo>
